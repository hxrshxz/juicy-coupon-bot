{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "lib/**/*.ts",
    "index.ts",
    "bin",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
